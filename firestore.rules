rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid))
        .data.role == 'admin';
    }

    function isSubscriber() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/subscriptions/$(request.auth.uid))
        .data.status == 'active';
    }

    /* USERS */
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
      allow update: if isAdmin();
    }

    /* SUBSCRIPTIONS */
    match /subscriptions/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin(); // Only backend / webhook
    }

    /* PRODUCTS (Store) */
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* MIXTAPES */
    match /mixtapes/{mixtapeId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* MUSIC POOL (Tracks) */
    match /music_pool/{trackId} {
      // Public can see list? Or logic handles it?
      // Assuming public metadata is fine for "preview", download secured via API
      allow read: if true; 
      allow write: if isAdmin();
    }
    
    match /musicPacks/{packId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /* DOWNLOAD LOGS */
    match /downloads/{downloadId} {
      allow create: if isSubscriber();
      allow read: if isAdmin();
    }

    /* TIP JAR */
    match /tips/{tipId} {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    /* ADMIN LOGS */
    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
