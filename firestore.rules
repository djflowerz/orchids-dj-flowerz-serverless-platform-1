rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid))
        .data.role == 'admin';
    }

    function isSubscriber() {
      return isSignedIn() &&
        get(/databases/$(database)/documents/subscriptions/$(request.auth.uid))
        .data.status == 'active';
    }

    /* USERS */
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
      allow update: if isAdmin();
    }

    /* SUBSCRIPTIONS */
    match /subscriptions/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin(); // Only backend / webhook
    }

    /* MUSIC PACKS */
    match /musicPacks/{packId} {
      allow read: if true; // previews & metadata public
      allow write, update, delete: if isAdmin();
    }

    /* DOWNLOAD LOGS */
    match /downloads/{downloadId} {
      allow create: if isSubscriber();
      allow read: if isAdmin();
    }

    /* TIP JAR */
    match /tips/{tipId} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    /* ADMIN LOGS */
    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
